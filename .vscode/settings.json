// Place your settings in this file to overwrite default and user settings.
{
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.formatOnType": true,
  "files.exclude": {
    "**/Godeps": true,
    "**/vendor": true,
    "**/node_modules": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/.tmp": true,
    "tests/tests": true,
    "tests/src": true,
    "**/*.js": {
      "when": "$(basename).ts"
    }
  },
  "search.exclude": {
    "**/Godeps": true,
    "**/vendor": true,
    "**/node_modules": true,
    "**/bower_components": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true
  }
}
